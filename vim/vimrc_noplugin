autocmd! bufwritepost .vimrc source ~/.vimrc

au! BufNewFile,BufRead *.t setf cpp
filetype plugin indent on
:set nu
:set cursorline
:syntax on
:set autoread
:set backspace=2 
:set showmatch
:set ts=4
:set softtabstop=4
:set shiftwidth=4
:set expandtab
:set autoindent
:set vb
:set cindent

inoremap ( ()<ESC>i
inoremap [ []<ESC>i
inoremap < <><ESC>i
inoremap ' ''<ESC>i
inoremap " ""<ESC>i
